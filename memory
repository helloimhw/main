<body>
    <h1>ë©”ëª¨ë¦¬ ì¹´ë“œ ê²Œì„</h1>
    <div class="game-info">
        <p>ì¹´ë“œë¥¼ ë‘ ì¥ì”© ë’¤ì§‘ì–´ ê°™ì€ ê·¸ë¦¼ì„ ì°¾ìœ¼ì„¸ìš”!</p>
    </div>

    <div class="stats">
        <div>ì‹œë„ íšŸìˆ˜: <span id="attempts">0</span></div>
        <div>ë§¤ì¹˜ íšŸìˆ˜: <span id="matches">0</span></div>
    </div>

    <div class="game-board" id="gameBoard">
        <!-- ì¹´ë“œëŠ” JavaScriptë¡œ ë™ì ìœ¼ë¡œ ìƒì„±ë©ë‹ˆë‹¤ -->
    </div>

    <div class="controls">
        <button id="resetBtn">ê²Œì„ ë‹¤ì‹œ ì‹œì‘</button>
    </div>

    <div class="win-message" id="winMessage">
        <h2>ì¶•í•˜í•©ë‹ˆë‹¤! ëª¨ë“  ì¹´ë“œë¥¼ ì°¾ì•˜ì–´ìš”!</h2>
        <p>ì´ ì‹œë„ íšŸìˆ˜: <span id="finalAttempts">0</span></p>
        <button id="playAgainBtn">ë‹¤ì‹œ í•˜ê¸°</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const gameBoard = document.getElementById('gameBoard');
            const resetBtn = document.getElementById('resetBtn');
            const playAgainBtn = document.getElementById('playAgainBtn');
            const winMessage = document.getElementById('winMessage');
            const attemptsDisplay = document.getElementById('attempts');
            const matchesDisplay = document.getElementById('matches');
            const finalAttemptsDisplay = document.getElementById('finalAttempts');

            let cards = [];
            let hasFlippedCard = false;
            let lockBoard = false;
            let firstCard, secondCard;
            let attempts = 0;
            let matches = 0;

            // ì¹´ë“œ ì´ë¯¸ì§€ ëª©ë¡ (ì´ëª¨ì§€ ì‚¬ìš©)
            const cardImages = [
                'ğŸ', 'ğŸ', 'ğŸŒ', 'ğŸŒ',
                'ğŸ’', 'ğŸ’', 'ğŸ“', 'ğŸ“',
                'ğŸŠ', 'ğŸŠ', 'ğŸ‹', 'ğŸ‹',
                'ğŸ‰', 'ğŸ‰', 'ğŸ‡', 'ğŸ‡'
            ];

            // ê²Œì„ ì´ˆê¸°í™”
            function initGame() {
                attempts = 0;
                matches = 0;
                attemptsDisplay.textContent = attempts;
                matchesDisplay.textContent = matches;
                winMessage.style.display = 'none';

                // ê¸°ì¡´ ì¹´ë“œ ì œê±°
                gameBoard.innerHTML = '';

                // ì¹´ë“œ ì„ê¸°
                cards = shuffleArray([...cardImages]);

                // ì¹´ë“œ ìƒì„±
                cards.forEach((image, index) => {
                    const card = document.createElement('div');
                    card.classList.add('card');
                    card.dataset.index = index;

                    const cardInner = document.createElement('div');
                    cardInner.classList.add('card-inner');

                    const cardFront = document.createElement('div');
                    cardFront.classList.add('card-front');

                    const cardBack = document.createElement('div');
                    cardBack.classList.add('card-back');
                    cardBack.textContent = image;

                    cardInner.appendChild(cardFront);
                    cardInner.appendChild(cardBack);
                    card.appendChild(cardInner);

                    gameBoard.appendChild(card);

                    // ì¹´ë“œ í´ë¦­ ì´ë²¤íŠ¸ ì¶”ê°€
                    card.addEventListener('click', flipCard);
                });
            }

            // ì¹´ë“œ ë’¤ì§‘ê¸°
            function flipCard() {
                if (lockBoard) return;
                if (this === firstCard) return;
                if (this.classList.contains('matched')) return;

                this.classList.add('flipped');

                if (!hasFlippedCard) {
                    // ì²« ë²ˆì§¸ ì¹´ë“œ ì„ íƒ
                    hasFlippedCard = true;
                    firstCard = this;
                    return;
                }

                // ë‘ ë²ˆì§¸ ì¹´ë“œ ì„ íƒ
                secondCard = this;
                attempts++;
                attemptsDisplay.textContent = attempts;

                checkForMatch();
            }

            // ì¹´ë“œ ë§¤ì¹˜ í™•ì¸
            function checkForMatch() {
                const firstCardImage = firstCard.querySelector('.card-back').textContent;
                const secondCardImage = secondCard.querySelector('.card-back').textContent;

                if (firstCardImage === secondCardImage) {
                    // ë§¤ì¹˜ ì„±ê³µ
                    disableCards();
                    matches++;
                    matchesDisplay.textContent = matches;

                    if (matches === cardImages.length / 2) {
                        // ëª¨ë“  ì¹´ë“œë¥¼ ì°¾ìŒ
                        setTimeout(() => {
                            finalAttemptsDisplay.textContent = attempts;
                            winMessage.style.display = 'flex';
                        }, 500);
                    }
                } else {
                    // ë§¤ì¹˜ ì‹¤íŒ¨ - ì¹´ë“œ ë‹¤ì‹œ ë’¤ì§‘ê¸°
                    unflipCards();
                }
            }

            // ë§¤ì¹˜ëœ ì¹´ë“œ ë¹„í™œì„±í™”
            function disableCards() {
                firstCard.classList.add('matched');
                secondCard.classList.add('matched');
                firstCard.removeEventListener('click', flipCard);
                secondCard.removeEventListener('click', flipCard);

                resetBoard();
            }

            // ì¹´ë“œ ë‹¤ì‹œ ë’¤ì§‘ê¸°
            function unflipCards() {
                lockBoard = true;

                setTimeout(() => {
                    firstCard.classList.remove('flipped');
                    secondCard.classList.remove('flipped');

                    resetBoard();
                }, 1000);
            }

            // ê²Œì„ ë³´ë“œ ì´ˆê¸°í™”
            function resetBoard() {
                [hasFlippedCard, lockBoard] = [false, false];
                [firstCard, secondCard] = [null, null];
            }

            // ë°°ì—´ ì„ê¸° (Fisher-Yates ì•Œê³ ë¦¬ì¦˜)
            function shuffleArray(array) {
                for (let i = array.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [array[i], array[j]] = [array[j], array[i]];
                }
                return array;
            }

            // ë‹¤ì‹œ ì‹œì‘ ë²„íŠ¼ í´ë¦­ ì‹œ
            resetBtn.addEventListener('click', initGame);
            playAgainBtn.addEventListener('click', initGame);

            // ê²Œì„ ì‹œì‘
            initGame();
        });
    </script>
